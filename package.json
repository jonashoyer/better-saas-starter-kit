{
  "name": "bs-root",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "npm": "7.20.0",
    "node": "16.5.0"
  },
  "scripts": {
    "reinstall": "rm -rf module_name && npm i",
    "dev": "npm-run-all -l -p -r *:dev",
    "watch": "npm-run-all -l -p -r *:watch",
    "generate": "npm-run-all *:generate",
    "build": "npm-run-all -p -r *:build",
    "web:dev": "npm run dev -w bs-web-kit",
    "api:dev": "npm run dev -w bs-api-kit",
    "prisma:generate": "npx prisma generate --schema packages/shared-server/prisma/schema.prisma",
    "prisma:dev": "npx prisma migrate dev --schema packages/shared-server/prisma/schema.prisma",
    "prisma:reset": "npx prisma migrate reset --schema packages/shared-server/prisma/schema.prisma",
    "prisma:deploy": "npx prisma migrate deploy --schema packages/shared-server/prisma/schema.prisma",
    "prisma:format": "npx prisma format --schema packages/shared-server/prisma/schema.prisma",
    "api:generate": "npm run generate -w bs-api-kit",
    "web:generate": "npm run generate -w bs-web-kit",
    "api:build": "npm run build -w bs-api-kit",
    "web:build": "npm run build -w bs-web-kit",
    "shared:build": "npm run build -w bs-shared-kit",
    "shared:watch": "npm run watch -w bs-shared-kit",
    "shared-server:build": "npm run build -w bs-shared-server-kit",
    "shared-server:watch": "npm run watch -w bs-shared-server-kit",
    "stripe:relay": "stripe listen --forward-to 127.0.0.1:3000/api/webhook"
  },
  "devDependencies": {
    "@types/ms": "^0.7.31",
    "npm-run-all": "^4.1.5",
    "prisma": "^2.29.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@prisma/client": "^2.29.0",
    "dayjs": "^1.10.6",
    "ms": "^2.1.2"
  }
}
