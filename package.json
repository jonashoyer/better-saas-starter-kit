{
  "name": "better-saas-starter-kit",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettier": "prettier \"*.{js,json,yml,md}\" \"packages/**/*\"",
    "format:check": "npm run prettier -- --check",
    "reinstall": "rm -rf module_name && npm i",
    "watch": "npm-run-all -l -p -r *:watch",
    "generate": "npm-run-all *:generate",
    "lib:build": "npm-run-all -s prisma:generate shared:build shared-server:build",
    "app:build": "npm-run-all -s api:build worker:build web:build",
    "web:dev": "npm run dev -w bs-web-kit",
    "api:dev": "npm run dev -w bs-api-kit",
    "worker:dev": "npm run dev -w bs-worker-kit",
    "prisma:generate": "npx prisma generate",
    "prisma:dev": "npx prisma migrate dev",
    "prisma:reset": "npx prisma migrate reset",
    "prisma:deploy": "npx prisma migrate deploy",
    "prisma:format": "npx prisma format",
    "prisma:seed": "npx prisma db seed",
    "api:generate": "npm run generate -w bs-api-kit",
    "web:generate": "npm run generate -w bs-web-kit",
    "api:build": "npm run build -w bs-api-kit",
    "web:build": "npm run build -w bs-web-kit",
    "shared:build": "npm run build -w bs-shared-kit",
    "shared:watch": "npm run watch -w bs-shared-kit",
    "shared-server:build": "npm run build -w bs-shared-server-kit",
    "shared-server:watch": "npm run watch -w bs-shared-server-kit",
    "stripe:relay": "stripe listen --forward-to 127.0.0.1:3000/api/webhook",
    "cli": "ts-node apps/cli"
  },
  "devDependencies": {
    "@types/inquirer": "^8.1.1",
    "@types/ms": "^0.7.31",
    "boxen": "^5.1.1",
    "chalk": "^2.4.2",
    "commander": "^2.20.3",
    "inquirer": "^7.3.3",
    "listr": "^0.14.3",
    "meow": "^10.1.1",
    "npm-run-all": "^4.1.5",
    "ora": "^6.0.1",
    "prisma": "^3.0.2",
    "turbo": "^1.0.25",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@prisma/client": "^3.0.2",
    "dayjs": "^1.10.7",
    "ms": "^2.1.2"
  },
  "turbo": {
    "npmClient": "npm",
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "outputs": [
          "dist/**",
          ".next/**",
          "public/dist/**"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "test": { },
      "lint": { },
      "dev": {
        "cache": false
      },
      "clean": {
        "cache": false
      }
    }
  }
}
