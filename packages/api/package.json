    "@types/ioredis": "^4.26.5",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/rate-limit-redis": "^1.7.2",
    "prettier": "^2.3.2",
    "prisma": "^2.27.0",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "prisma": {
    "schema": "../shared-server/prisma/schema.prisma"
  }
