{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
    }
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "nexus/typescript-language-service" }],
    "baseUrl": ".",
    "paths": {
      "@/": ["/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.json"],
  "exclude": ["node_modules"],
  "references": [{ "path": "../shared-server" }, { "path": "../shared" }]
}
