{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "importHelpers": true,
    "removeComments": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "./lib"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}